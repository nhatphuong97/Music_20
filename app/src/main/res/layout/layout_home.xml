<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_content_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:background="@color/color_black10"
                />
            <View
                android:id="@+id/view_devide"
                android:layout_width="@dimen/dp_370"
                android:layout_height="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewpager"
                />

            <TextView
                android:id="@+id/type_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_type"
                android:textColor="@color/color_black10"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/view_devide"
                />
            <ImageButton
                android:id="@+id/button_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@color/color_white"
                android:scaleType="centerInside"
                android:src="@drawable/ic_music"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_audio"
                />
            <ImageButton
                android:id="@+id/button_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@color/color_white"
                android:scaleType="centerInside"
                android:src="@drawable/ic_audio"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_music"
                />
            <View
                android:id="@+id/view_devider"
                android:layout_width="@dimen/dp_370"
                android:layout_height="@dimen/dp_2"
                android:background="@color/color_black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_audio"
                />
            <TextView
                android:id="@+id/type_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/type_genre"
                android:textColor="@color/color_black10"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/view_devider"
                />
            <ImageButton
                android:id="@+id/button_classic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@color/color_white"
                android:scaleType="centerInside"
                android:src="@drawable/ic_classic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_genres"
                />
            <ImageButton
                android:id="@+id/button_rock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@color/color_white"
                android:scaleType="centerInside"
                android:src="@drawable/ic_rock"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_classic"
                />
            <ImageButton
                android:id="@+id/button_ambient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@color/color_white"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ambient"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_rock"
                />
            <ImageButton
                android:id="@+id/button_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@color/color_white"
                android:scaleType="centerInside"
                android:src="@drawable/ic_country"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_ambient"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
